@model IEnumerable<ASP.NET_MVC.Models.Especie>

@{
    ViewBag.Title = "Listado de Especies";
}

<div class="breadcrumb">
    <div class="row">
        <div class="col-sm-10">
            <h2>Listado de Especies</h2>
        </div>
        <div class="col-sm-2 text-right">
            <a href="@Url.Action("Create", "Especie")" class="btn btn-success">Registrar Nuevo</a>
        </div>
    </div>
</div>

@if (ViewBag.MessageSuccess == "")
{
    <h5>@ViewBag.MessageSuccess</h5>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            <a href="@Url.Action("Edit", "Especie", new { id = item.EspecieId })" class="btn btn-success fa fa-pencil"></a>
            <a href="@Url.Action("Details", "Especie", new { id = item.EspecieId })" class="btn btn-default fa fa-eye"></a>
            <a href="@Url.Action("Delete", "Especie", new { id = item.EspecieId })" class="btn btn-danger fa fa-trash"></a>
        </td>
    </tr>
}

</table>
